#include <stdio.h>

int main() {
    int num1, num2, num3, sum;

    // Input three numbers
    printf("Enter the first number: ");
    scanf("%d", &num1);

    printf("Enter the second number: ");
    scanf("%d", &num2);

    printf("Enter the third number: ");
    scanf("%d", &num3);

    // Calculate the sum
    sum = num1 + num2 + num3;

    // Output the result
    printf("The sum of the three numbers is: %d\n", sum);

    return 0;
}
